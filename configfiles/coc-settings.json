{"languageserver":{
  "bash": {
    "command": "bash-language-server",
    "args": ["start"],
    "filetypes": ["sh","bash"],
    "ignoredRootPaths": ["~"]
  } ,
   "ccls": {
   "command": "ccls",
   "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
   "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
   "initializationOptions": {
     "cache": {
       "directory": "/tmp/ccls"
     }
   }
 }
},
"suggest.snippetIndicator":" (snippet)",
"clangd.enabled":true,
"languageserver.ccls.filetypes":[],
}

